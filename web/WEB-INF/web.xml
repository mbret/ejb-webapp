<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>Index</servlet-name>
        <servlet-class>web.servlet.Index</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>Signin</servlet-name>
        <servlet-class>web.servlet.Signin</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Signin</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>

    <!--http://www.tutorialspoint.com/servlets/servlets-writing-filters.htm-->
    <filter>
        <filter-name>ConfigInjectorFilter</filter-name>
        <filter-class>web.filter.ConfigInjector</filter-class>
    </filter>
    <filter>
        <filter-name>IsAuthenticatedFilter</filter-name>
        <filter-class>web.filter.IsAuthenticated</filter-class>
    </filter>

    <!--<filter-mapping>-->
        <!--<filter-name>IsAuthenticatedFilter</filter-name>-->
        <!--<url-pattern>/*</url-pattern>-->
    <!--</filter-mapping>-->
    <filter-mapping>
        <filter-name>ConfigInjectorFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    

</web-app>