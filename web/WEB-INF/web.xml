<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <error-page>
        <error-code>500</error-code>
        <location>/views/partials/500.jsp</location>
    </error-page>
    
    <servlet>
        <servlet-name>Signin</servlet-name>
        <servlet-class>webapp.servlet.Auth.Signin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Signup</servlet-name>
        <servlet-class>webapp.servlet.Auth.Signup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>webapp.servlet.Auth.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Articles</servlet-name>
        <servlet-class>webapp.servlet.Article.Articles</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Folders</servlet-name>
        <servlet-class>webapp.servlet.Folder.Folders</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Subscribe</servlet-name>
        <servlet-class>webapp.servlet.Subscribe</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WriteArticle</servlet-name>
        <servlet-class>webapp.servlet.Article.WriteArticle</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DetailArticle</servlet-name>
        <servlet-class>webapp.servlet.Article.ReadArticle</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WriteComment</servlet-name>
        <servlet-class>webapp.servlet.Comment.WriteComment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Profile</servlet-name>
        <servlet-class>webapp.servlet.Profile</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>Articles</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Signin</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Signup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Folders</servlet-name>
        <url-pattern>/folders</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Subscribe</servlet-name>
        <url-pattern>/subscribe</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WriteArticle</servlet-name>
        <url-pattern>/articles/write</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DetailArticle</servlet-name>
        <url-pattern>/articles/detail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WriteComment</servlet-name>
        <url-pattern>/articles/comments/post</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Profile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>

    <!--http://www.tutorialspoint.com/servlets/servlets-writing-filters.htm-->
    <filter>
        <filter-name>ConfigInjectorFilter</filter-name>
        <filter-class>webapp.filter.ConfigInjectorFilter</filter-class>
    </filter>
    <filter>
        <filter-name>IsAuthenticatedFilter</filter-name>
        <filter-class>webapp.filter.IsAuthenticatedFilter</filter-class>
    </filter>
    <filter>
        <filter-name>FlashFilter</filter-name>
        <filter-class>webapp.filter.FlashFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>IsAuthenticatedFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ConfigInjectorFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FlashFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    

</web-app>